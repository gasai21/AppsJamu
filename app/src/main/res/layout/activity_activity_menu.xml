<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pangling.appsjamu.ActivityMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu Form"
        android:textAlignment="center"
        android:id="@+id/textView4"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konsutasi Obat"
        android:id="@+id/btnKonsultasi"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History Konsultasi"
        android:id="@+id/btnHistory"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/btnKonsultasi"
        android:layout_alignStart="@+id/btnKonsultasi"
        android:layout_alignEnd="@+id/btnKonsultasi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artikel Sekitar"
        android:id="@+id/btnArtikel"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/btnHistory"
        android:layout_alignStart="@+id/btnHistory"
        android:layout_alignEnd="@+id/btnHistory" />
</RelativeLayout>
